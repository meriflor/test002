<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_box_style">
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColorHint">@color/greyBlue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="input_style">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColorHint">#9ba4b4</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#14274E</item>
        <item name="colorPrimaryVariant">#14274E</item>
        <item name="colorAccent">#9BA4B4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>